{
    "manifest_version": 3,
    "name": "Wesley Wei's Real-Time Audio Transcriber",
    "description": "A real-time Chrome browser audio transcription tool.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["home.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["tabCapture", "activeTab", "sidePanel", "storage"],
    "optional_permissions": ["background"],
    "host_permissions": ["<all_urls>"]
}
