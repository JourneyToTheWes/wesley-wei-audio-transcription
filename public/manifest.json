{
    "manifest_version": 3,
    "name": "Wesley Wei's Real-Time Audio Transcriber",
    "description": "A real-time Chrome browser audio transcription tool.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["tabCapture", "activeTab", "sidePanel", "storage"],
    "optional_permissions": ["microphone", "background"],
    "host_permissions": ["<all_urls>"]
}
